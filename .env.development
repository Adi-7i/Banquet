# Development Environment Configuration
NODE_ENV=development
PORT=3000
APP_NAME=CYNERZA Backend API (Development)
APP_VERSION=1.0.0

# Database - Local PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cynerza_dev?schema=public
DB_POOL_MIN=2
DB_POOL_MAX=10

# Security - Development only (NOT for production)
JWT_SECRET=dev-jwt-secret-change-for-production
JWT_EXPIRATION=7d
BCRYPT_ROUNDS=10

# CORS - Allow localhost origins
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting - More permissive in development
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# Logging - Verbose for development
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Swagger - Enabled in development
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# Health Check
HEALTH_CHECK_ENABLED=true
DISK_THRESHOLD_PERCENT=90
MEMORY_HEAP_THRESHOLD=300MB
