# Production Environment Configuration
NODE_ENV=production
PORT=3000
APP_NAME=CYNERZA Backend API
APP_VERSION=1.0.0

# Database - Production PostgreSQL (MUST use secrets manager)
DATABASE_URL=<INJECT_FROM_SECRETS_MANAGER>
DB_POOL_MIN=10
DB_POOL_MAX=50

# Security - CRITICAL: Use secure secrets management
JWT_SECRET=<INJECT_FROM_SECRETS_MANAGER>
JWT_EXPIRATION=1h
BCRYPT_ROUNDS=12

# CORS - Production frontend URL
CORS_ORIGIN=https://cynerza.com,https://www.cynerza.com
CORS_CREDENTIALS=true

# Rate Limiting - Strict in production
THROTTLE_TTL=60
THROTTLE_LIMIT=50

# Logging - Structured production logs
LOG_LEVEL=warn
LOG_FORMAT=json

# Swagger - Disabled in production for security
SWAGGER_ENABLED=false
SWAGGER_PATH=api/docs

# Health Check
HEALTH_CHECK_ENABLED=true
DISK_THRESHOLD_PERCENT=80
MEMORY_HEAP_THRESHOLD=150MB
