# Staging Environment Configuration
NODE_ENV=staging
PORT=3000
APP_NAME=CYNERZA Backend API (Staging)
APP_VERSION=1.0.0

# Database - Staging PostgreSQL (Use secrets manager in real deployment)
DATABASE_URL=postgresql://USER:PASSWORD@staging-db-host:5432/cynerza_staging?schema=public
DB_POOL_MIN=5
DB_POOL_MAX=20

# Security - Use secrets manager to inject real values
JWT_SECRET=<INJECT_FROM_SECRETS_MANAGER>
JWT_EXPIRATION=1d
BCRYPT_ROUNDS=12

# CORS - Staging frontend URL
CORS_ORIGIN=https://staging.cynerza.com
CORS_CREDENTIALS=true

# Rate Limiting - Production-like settings
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging - Structured JSON logs
LOG_LEVEL=info
LOG_FORMAT=json

# Swagger - Can be enabled for testing
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# Health Check
HEALTH_CHECK_ENABLED=true
DISK_THRESHOLD_PERCENT=85
MEMORY_HEAP_THRESHOLD=200MB
